<script>
    function notify() {
    	$( ".btn-import" ).attr('disabled', 'disabled');
    	$( ".btn-import" ).addClass('disabled');
		$('.div-progressing').css('display','block');
        $.ajax({
			url: "/admin/centraldb/geonames/process",
            cache: false,
            success:function( html ) {
            	//console.log(html);
                $( ".div-progressing" ).html( html );
                notify();
            },
            error: function(html){
                $(".div-progressing").html('<div class="padding-10"><p class="alert alert-danger">Failure!</p></div>');
                notify();
            }
        })

    }
    $( document ).ready(function() {
    	$( ".btn-import" ).on( "click", notify );
    });
</script>
